<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  
  <div class="field mb-3">
    <%= form.label :email %><br />
    <%= form.email_field :email, placeholder: "email@example.com", autocomplete: "email", class: "form-control", required: true  %>
  </div>

  <div class="field mb-3">
    <%= form.label :password %><br />
    <%= form.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "form-control"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= form.check_box :remember_me %>
      <%= form.label :remember_me %>
    </div>
  <% end %>

  <div class="mb-3 actions">
    <%= form.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
