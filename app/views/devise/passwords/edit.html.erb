<h2>Reset your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= form.hidden_field :reset_password_token %>

  <div class="field mb-3">
    <%= form.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= form.password_field :password, placeholder: "Password (1 uppercase, 1 lowercase, 1 number)", autocomplete: "new-password", class: "form-control", required: true  %>
  </div>

  <div class="field mb-3">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation,placeholder: "Confirm Password", autocomplete: "new-password", class: "form-control", required: true  %>
  </div>

  <div class="actions mb-3">
    <%= form.submit "Reset Password", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
