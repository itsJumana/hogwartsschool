<h2>Your Profile</h2>

<div class="profile-info container mb-4">
  <p><strong>Name:</strong> <%= @wizard.name %></p>
  <p><strong>Email:</strong> <%= @wizard.email %> </p>
  <p><strong>House:</strong> <%= @wizard.house %></p>
  <p><strong>Date of Birth:</strong> <%= @wizard.date_of_birth %></p>
  <p><strong>Bio:</strong> <%= @wizard.bio %></p>
  <p><strong>Muggle Relative:</strong> <%= @wizard.muggle_relative ? 'Yes' : 'No' %></p>
</div>

<div class="profile-actions mb-4">
  <%= link_to "Edit Profile", edit_wizard_path(@wizard), class: "btn btn-primary" %>
  <%= link_to "Change Password", edit_wizard_registration_path(@wizard), class: "btn btn-secondary" %>
</div>

<div class="mb-4">
  <h2>Spells</h2>
  <% if @wizard.spells.any? %>
    <ul class="list-unstyled">
      <% @wizard.spells.each do |spell| %>
        <li class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <strong><%= spell.name %>:</strong> <%= spell.description %>
          </div>
          <div>
            <%= link_to "Edit", edit_spell_path(spell), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", spell_path(spell), method: :delete, data: { confirm: "Are you sure you want to delete this spell?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No spells created yet.</p>
  <% end %>

  <%= link_to "Create a New Spell", new_spell_path, class: "btn btn-primary" %>
</div>